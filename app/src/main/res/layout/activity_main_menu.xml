<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_purple">

    <!-- Scrolling Background -->
    <com.example.kma_shot.view.ScrollingBackgroundView
        android:id="@+id/scrollingBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay gradient for better visibility -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_overlay" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Logo and Title Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/gameLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/logo_kma_shot" />

            <!-- Game Title -->
            <TextView
                android:id="@+id/gameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="38sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:shadowColor="@color/dark_purple"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="8"
                android:letterSpacing="0.15" />

        </LinearLayout>

        <!-- Menu Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="40dp">

            <!-- Start Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStart"
                android:layout_width="280dp"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_main_menu"
                android:text="@string/menu_start"
                android:textColor="@color/button_start"
                android:textSize="20sp"
                android:textStyle="bold"
                android:elevation="8dp"
                android:letterSpacing="0.1" />

            <!-- High Score Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHighScore"
                android:layout_width="280dp"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_main_menu"
                android:text="@string/menu_highscore"
                android:textColor="@color/button_highscore"
                android:textSize="20sp"
                android:textStyle="bold"
                android:elevation="8dp"
                android:letterSpacing="0.1" />

            <!-- Tutorial Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTutorial"
                android:layout_width="280dp"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_main_menu"
                android:text="@string/menu_tutorial"
                android:textColor="@color/button_tutorial"
                android:textSize="20sp"
                android:textStyle="bold"
                android:elevation="8dp"
                android:letterSpacing="0.1" />

            <!-- Settings Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSettings"
                android:layout_width="280dp"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_main_menu"
                android:text="@string/menu_settings"
                android:textColor="@color/button_settings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:elevation="8dp"
                android:letterSpacing="0.1" />

            <!-- Exit Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnExit"
                android:layout_width="280dp"
                android:layout_height="56dp"
                android:background="@drawable/button_main_menu"
                android:text="@string/menu_exit"
                android:textColor="@color/button_exit"
                android:textSize="20sp"
                android:textStyle="bold"
                android:elevation="8dp"
                android:letterSpacing="0.1" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
