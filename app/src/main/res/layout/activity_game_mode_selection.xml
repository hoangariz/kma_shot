<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_purple">

    <!-- Scrolling Background -->
    <com.example.kma_shot.view.ScrollingBackgroundView
        android:id="@+id/scrollingBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_overlay" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/game_mode_title"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:shadowColor="@color/dark_purple"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- ScrollView for game modes -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Easy Mode -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEasy"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:elevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/mode_easy"
                        android:padding="20dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mode_easy"
                            android:textSize="24sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:shadowColor="@color/text_shadow"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="3" />

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/mode_classic_desc"-->
<!--                            android:textSize="14sp"-->
<!--                            android:textColor="@color/white"-->
<!--                            android:layout_marginTop="8dp"-->
<!--                            android:gravity="center" />-->

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Medium Mode -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMedium"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:elevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/mode_medium"
                        android:padding="20dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mode_medium"
                            android:textSize="24sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:shadowColor="@color/text_shadow"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="3" />

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/mode_survival_desc"-->
<!--                            android:textSize="14sp"-->
<!--                            android:textColor="@color/white"-->
<!--                            android:layout_marginTop="8dp"-->
<!--                            android:gravity="center" />-->

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Hard Mode -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHard"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:elevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/mode_hard"
                        android:padding="20dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mode_hard"
                            android:textSize="24sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:shadowColor="@color/text_shadow"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="3" />

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/mode_boss_desc"-->
<!--                            android:textSize="14sp"-->
<!--                            android:textColor="@color/white"-->
<!--                            android:layout_marginTop="8dp"-->
<!--                            android:gravity="center" />-->

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Extreme Mode -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardExtreme"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:elevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/mode_extreme"
                        android:padding="20dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mode_extreme"
                            android:textSize="24sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:shadowColor="@color/text_shadow"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="3" />

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/mode_endless_desc"-->
<!--                            android:textSize="14sp"-->
<!--                            android:textColor="@color/white"-->
<!--                            android:layout_marginTop="8dp"-->
<!--                            android:gravity="center" />-->

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

        <!-- Back Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_main_menu"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="8dp" />

    </LinearLayout>

</FrameLayout>
